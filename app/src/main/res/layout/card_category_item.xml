<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_card_category_item"
    android:layoutDirection="rtl"
    android:layout_marginTop="@dimen/mg_t_card_category"
    tools:ignore="HardcodedText" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_category"
        android:paddingStart="@dimen/pad_s_card_category"
        android:paddingEnd="@dimen/pad_e_card_category" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category_title_tv"
            android:textSize="@dimen/ts_card_category_title"
            android:textColor="@color/black"
            android:text="ارسال پیامک تکی"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_card_category_arrow"
            android:id="@+id/category_forward_iv"
            android:src="@drawable/ic_forward_arrow"
            android:contentDescription="@string/forward"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>