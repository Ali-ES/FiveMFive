<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_field_layout">
        <item name="android:background">@drawable/bg_field_unfocused</item>
        <item name="android:paddingTop">@dimen/edit_top_bottom</item>
        <item name="android:paddingBottom">@dimen/edit_top_bottom</item>
        <item name="android:paddingStart">@dimen/edit_start_end</item>
        <item name="android:paddingEnd">@dimen/edit_start_end</item>
        <item name="android:layout_marginTop">@dimen/login_field_top</item>
    </style>
    <style name="login_field_et">
        <item name="android:background">@null</item>
        <item name="android:gravity">left</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="login_button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button</item>
        <item name="android:layout_marginTop">@dimen/login_field_top</item>
    </style>
    <style name="login_options">
        <item name="android:textSize">@dimen/options</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:layout_marginTop">@dimen/login_field_top</item>
    </style>
    <style name="progress_indicator">
        <item name="trackThickness">3dp</item>
        <item name="indicatorColor">@color/navy_blue</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="bottom_bar_texts">
        <item name="android:textSize">@dimen/ts_bottom_bar</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>